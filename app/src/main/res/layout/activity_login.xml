<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Login">

    <RelativeLayout
        android:id="@+id/loginBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zz">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#27FFFFFF" />

        <TextView
            android:id="@+id/tvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="23dp"
            android:alpha="0"
            android:fontFamily="@font/bubbler_one"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="417dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/loginbackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="71dp"
                android:layout_height="69dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="142dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="306dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="81dp"
                android:background="#00FFFFFF"
                android:hint="username"
                app:endIconMode="clear_text"
                app:endIconTint="#0C0C0C">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_rectangle_background"
                    android:drawableStart="@drawable/ic_baseline_assignment_ind_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="306dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="221dp"
                android:background="#00FFFFFF"
                app:endIconMode="password_toggle"
                app:endIconTint="#0C0C0C"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#020202">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_rectangle_background"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:drawablePadding="10dp"

                    android:hint="password"
                    android:inputType="textPassword"
                    android:visibility="visible"
                    android:paddingLeft="10dp"
                    android:paddingBottom="0dp">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="82dp"
                android:layout_marginBottom="161dp"
                android:fontFamily="@font/miniver"
                android:text="Remember me"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/rememberLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="39dp"
                android:layout_marginBottom="160dp"
                android:buttonTint="#FFFFFF" />

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="134dp"
                android:layout_marginBottom="114dp"
                android:background="@drawable/white_rectangle_background"
                android:backgroundTint="#7C9C27B0"
                android:fontFamily="@font/crafty_girls"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/loginTwitter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/circle"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/loginFb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="223dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/circle"
                app:srcCompat="@drawable/fb" />

            <ImageView
                android:id="@+id/loginGg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="267dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/circle"
                app:srcCompat="@drawable/google" />

            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="62dp"
                android:layout_marginBottom="194dp"
                android:fontFamily="@font/julee"
                android:text="Forgot password ?"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/faceID"
                android:layout_width="79dp"
                android:layout_height="57dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="13dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/faceid" />

            <ImageView
                android:id="@+id/fingerprint"
                android:layout_width="76dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="17dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/fifi" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="73dp"
                android:fontFamily="@font/rock_salt"
                android:text="OR    LOGIN    WITH"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_below="@id/RelativeLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/loginbackground">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="-73dp"
                android:fontFamily="@font/vibur"
                android:text="Don't have an account?"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/signupp"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="false"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/loginbackground"
                android:fontFamily="@font/kite_one"
                android:includeFontPadding="true"
                android:paddingStart="15dp"
                android:text="Sign up"
                android:textColor="#E1DFDF"
                android:textSize="30sp">

            </TextView>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fbBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">

<!--        <ImageView-->
<!--            android:id="@+id/fimage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginTop="80dp" />-->

<!--        <TextView-->
<!--            android:id="@+id/fname"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/fimage"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:text="TextView"-->
<!--            android:textColor="#3F51B5"-->
<!--            android:textSize="24sp" />-->

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TwitterBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0">

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/login_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forgotPasswordBackground"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/enteremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your email: "
            android:textSize="28sp"
            android:layout_centerInParent="true"
            android:textColor="@color/red"/>
        <EditText
            android:id="@+id/emailReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enteremail"/>
    </RelativeLayout>

</RelativeLayout>